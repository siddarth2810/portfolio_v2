---
const experiences = [
  {
    company: "Tower Cloud",
    companyUrl: "https://tower.cloud",
    role: "Software Engineer Intern",
    summary: "Built the observability stack for entire cloud platform",
    dateRange: "Sept 25 — Present",
    logoSrc: "/tower.png",
  },
  {
    company: "The Linux Foundation",
    companyUrl: "https://www.linuxfoundation.org",
    role: "Linux Kernel Mentee",
    summary: "Contributed to the upstream Linux kernel",
    dateRange: "Mar 25 — May 25",
    logoSrc: "/linux_foundation.png",
  },
];
---
<section class="pt-8">
  <h2 class="font-serif text-2xl tracking-tight font-medium">Experience</h2>

  <div class="pt-3 flex flex-col gap-2">
    {experiences.map((exp) => (
      <div class="w-full flex items-start justify-between py-2">
        <div class="flex items-start gap-3 min-w-0">
          <div class="w-11 h-11 rounded-md bg-white flex items-center justify-center shrink-0">
            <img
              src={exp.logoSrc}
              alt={`${exp.company} logo`}
              class="w-[70%] h-[70%] object-contain"
              loading="lazy"
            />
          </div>

          <div class="flex flex-col leading-snug gap-0.5 min-w-0">
          <div class="flex">
            {exp.companyUrl ? (
              <a
                class="text-primary text-base font-serif tracking-tight truncate"
                href={exp.companyUrl}
                target="_blank"
                rel="noopener noreferrer"
              >
                {exp.company}
              </a>
            ) : (
              <div class="text-primary text-base font-serif tracking-tight truncate">
                {exp.company}
              </div>
            )}
            {exp.role ? (
              <div class="text-xs opacity-80 tracking-tight truncate p-1">
                - {exp.role}
              </div>
            ) : null}
          </div>


            {exp.summary ? (
              <div class="text-xs tracking-tight truncate">
                {exp.summary}
              </div>
            ) : null}
          </div>
        </div>

        <div class="text-xs opacity-70 whitespace-nowrap pl-4 pt-0.5">
          {exp.dateRange}
        </div>
      </div>
    ))}
  </div>
</section>

